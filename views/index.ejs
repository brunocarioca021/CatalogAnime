<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Document</title>
</head>
<body>
    <nav class="nav-flex">
        <ul class="nav-bar">
            <li><a href="/">Home</a></li>
            <li><a href="/">Animes</a></li>
            <li><a href="/">Mangas</a></li>
            <li><a href="/">Personagens</a></li>
            <li><a href="/animeCadastro">Cadastro</a></li>
        </ul>        
    </nav>
    <header>
        <p>-------------------------//--------------------</p>
    </header>
    <section id="animes">
        <% animes.forEach(item => { %>
            <section class="animeCard">
                <article id="animeFlex">
                    <ul>
                        <li>ID: <%= item.id %></li>
                        <li>Nome: <%= item.nome %></li>
                        <li>Descrição: <%= item.descricao %></li>
                        <a href="/anime/<%= item.id %>">
                            <img src="<%= item.imagem %>" width=400>
                        </a>
                    </ul>
                </article>
            </section>
        <% }) %> 
    </section>
</body>
</html>