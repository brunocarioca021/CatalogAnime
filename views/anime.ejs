<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" type="otakubgr/img" href="/img/otakuplanet.png" />
    <title>World Otaku</title>
</head>
<body>
    <nav class="nav-flex">
        <h1 class="titulo"><a class="logo" href="/">World Otaku</a></h1> 
        <ul class="nav-bar">
            <li><a href="/animes">Animes</a></li>
            <li><a href="/">Mangas</a></li>
            <li><a href="/">Personagens</a></li>
            <li><a href="/animeCadastro">Cadastro</a></li>
        </ul>        
    </nav>
    <header>
    </header>
    <section id="animes">
        <% animes.forEach(item => { %>
            <section class="animeCard">
                <article id="animeFlex">
                    <ul>
                        <li>Nome: <%= item.nome %></li>
                        <li>Descrição: <%= item.descricao %></li>
                        <a href="/anime/<%= item.id %>">
                            <img src="<%= item.imagem %>" width=400>
                        </a>
                        <br>
                        <button><a href="/animeUpdate/<%= item.id %>">Updade</a></button>
                        <button><a href="/animeDeletar/<%= item.id %>">Deletar</a></button>
                    </ul>
                </article>
            </section>
        <% }) %> 
    </section>
</body>
</html>